<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <constant name="struts.ui.theme" value="simple"/>
    
    <package name="accionesLogin" extends="struts-default">
      
        <action name="loginCheck" class="actions.GestionUser" >
            <result name="success">main.jsp</result>      
           
            <result name="input" >login.jsp</result>         
        </action>
        
    </package>
    <package name="accionesRegister" extends="struts-default">
        <action name="registerCheck" class="actions.GestionRegister" >
            <result name="success">main.jsp</result>    
            <result name="input">register.jsp</result>    
                     
        </action>
    </package>
</struts>
